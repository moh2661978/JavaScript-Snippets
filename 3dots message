<p id="message"></p>
<input id="messageInput">
<button id="sendButton">
  Send
</button>

<script>
function inputAction() {
  message.textContent = '...';
}

// Your code here
function clickAction() {
  message.textContent=messageInput.value;
}
 messageInput.oninput = inputAction;
